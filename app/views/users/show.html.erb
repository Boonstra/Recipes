<% title 'Profiel' %>
<% user = @user %>
<%= image_tag user.image_url %><br>
<% if current_user == user %>
<%= link_to 'Wijzig Profiel Foto', edit_user_path(@user) %>
<% end %>
<p>
<b>Naam:</b>
<%= user.name %>
</p>

<h2>Volgt</h2>
<ul>
  <% @user.friendships.each do |friendship| %>
    <li>
      <p><%= link_to friendship.friend.name, friendship.friend %>
      <%= link_to "(Remove)", friendship, :method => :delete %></p>
    </li>
  <% end %>
</ul>

<h2>Gevolgd door</h2>
<ul>
  <% for user in @user.inverse_friends %>
    <li><%= link_to user.name, user %></li>
  <% end %>
</ul>

<% # Display this user's activity %>
<p>
  <h2>Recente activiteit</h2>
	<%= render :file => '/timeline/index', :@timeline => @timeline %>
</p>
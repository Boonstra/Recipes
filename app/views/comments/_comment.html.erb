<div class="comment" data-time="<%= comment.created_at.to_i %>">
  <%= link_to image_tag(comment.user.image_url, {:height => 35}), comment.user %>
  <b><%= link_to comment.user.name, comment.user %></b>
  <em>on <%= comment.created_at.strftime('%b %d, %Y at %I:%M %p') %></em><br />
  <%= best_in_place_if current_user && current_user.can_edit?(@recipe.post), comment, :message, :type => :textarea %>
</div>
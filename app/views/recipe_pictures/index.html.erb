<h1>Listing recipe_pictures</h1>
<div id="picture">
<table>
  <tr>
    <th>Picture</th>
    <th>Recipe ID</th>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @recipe_pictures.each do |recipe_picture| %>
  <tr>
    <td><%= image_tag recipe_picture.image_url(:recpic).to_s %></td>
    <td><%= recipe_picture.recipe_id %></td>
    <td><%= recipe_picture.title %></td>
    <td><%= link_to 'Show', recipe_picture %></td>
    <td><%= link_to 'Edit', edit_recipe_picture_path(recipe_picture) %></td>
    <td><%= link_to 'Destroy', recipe_picture, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />


<% timeline.each do |item| %>
	<% if item.class.name == 'Comment' %>
		<div class="update">
			<%= render 'timeline/comment', :item => item %>
		</div>
	<% elsif item.class.name == 'Recipe' %>
		<div class="update">
			<%= render 'timeline/recipe', :item => item %>
		</div>
	<% elsif item.class.name == 'Cookbook' %>
		<div class="update">
			<%= render 'timeline/cookbook', :item => item %>
		</div>
	<% end %>
<% end %>